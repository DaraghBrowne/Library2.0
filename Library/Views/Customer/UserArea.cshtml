@model IEnumerable<Library.Models.CopyItemTransacViewModel>
@{
	ViewBag.Title = "UserArea";
	Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}

<div class="mt-3">

	<h2>Library Account</h2>

</div>

<div class="row">
	<div class="col-sm-2"></div>
	<div class="col-sm-2"></div>
	<div class="col-sm-2"></div>
	<div class="col-sm-2"></div>
	<div class="col-sm-2"></div>
	<div class="col-sm-2"> <input type="button" value="Log Out" class="btn btn-danger btn-sm" onclick="location.href='@Url.Action("LogOut", "Customer")'" /></div>
</div>

<div class="mb-3">

	@if (Session["custName"] != null)
	{
		<h5>Welcome @Session["custName"].ToString()</h5>

	}

</div>



<div class="row">
	<div class="col-sm-6">
		
		<div class="card border-primary mb-3" style="max-width: 30rem;">
			<div class="card-header">Library Account</div>
			<div class="card-body">
				<h4 class="card-title">Borrowed Books</h4>
				@if (ViewBag.Success != null)
				{
					<p class="card-text"><span style="color:blue">Borrowed</span>@ViewBag.Success</p>
				}

				@if (ViewBag.BorrowedMessage != null)
				{
					<p class="card-text"><span style="color:red">@ViewBag.BorrowedMessage</span></p>
				}

				@if (ViewBag.ReturnMessage != null)
				{

					<p class="card-text">
						<span style="color:greenyellow">@ViewBag.ReturnMessage</span>
					</p>
				}

			</div>
			<table class="table table-hover">
				<thead>
					<tr>
						<th scope="col">Book</th>
						<th scope="col">Borrowed Date</th>
						<th scope="col">Return Date</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<th scope="row">@item.Name</th>
							<td>@item.Borrow_Date</td>
							<td>@item.Return_Date</td>

							<td><input type="button" value="Return" class="btn btn-primary btn-sm" onclick="location.href='@Url.Action("BookReturned", "Customer",  new { bookId = item.Isbn })'" /></td>


						</tr>
					}
				</tbody>
			</table>

		</div>
		<div class="card text-white bg-info mb-3" style="max-width: 30rem;">
			<div class="card-header">Header</div>
			<div class="card-body">
				<h4 class="card-title">Previously Borrrowed Books</h4>
				<p class="card-text"></p>
			</div>
			<div style="color:black">
				<ul class="list-group">
					<li class="list-group-item d-flex justify-content-between align-items-center">
						Electrical Engineering
						Return Date: 01/05/2018
					</li>
					<li class="list-group-item d-flex justify-content-between align-items-center">
						A Beginners Guide To Programming In C
						<span class="badge badge-primary badge-pill">2</span>
					</li>
					<li class="list-group-item d-flex justify-content-between align-items-center">
						Physics for Beginners
						<span class="badge badge-primary badge-pill">1</span>
					</li>
				</ul>
			</div>
		</div>
	</div>
	<div class="mt-5"></div>
		<div class="col-sm-6">
			<div class="card mb-3" style="max-width: 25rem;">
				<h3 class="card-header">Suggested Books</h3>
				<div class="card-body">
					<h5 class="card-title"></h5>
					<h6 class="card-subtitle text-muted"></h6>
				</div>
				<img style="height: auto; width: 30%; display: block;" src="~/image/compiler.jpg" alt="Card image">

				<div class="card-body">
					<p class="card-text"></p>
				</div>
				<ul class="list-group list-group-flush">
					<li class="list-group-item">Electrical Engineering</li>
					<li class="list-group-item">A Beginners Guide To Programming In C</li>
					<li class="list-group-item"></li>
				</ul>

			</div>
		</div>
	</div>


